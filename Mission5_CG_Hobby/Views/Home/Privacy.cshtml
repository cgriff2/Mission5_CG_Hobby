@{
    ViewData["Title"] = "Calculator";
}
<h1>@ViewData["Title"]</h1>

<p>Want to learn how to be great at everything? I can teach you!</p>
<br />
<p>Use the calculator below to get an estimate of the cost: </p>

<form>
    <label for="hours">Number of hours: </label>
    <input type="number" id="hours" autofocus/>
    <br />
    <label for="rate">My Hourly Rate: </label>
    <input type="text" id="rate" readonly value="100" style="background-color: gainsboro; outline: none;" />
    <br />
    <input type="button" id="btnClick" value="Calculate"/>
    <br />
    <input id="result" type="text" readonly style="outline: none;">
</form>